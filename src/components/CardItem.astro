---
interface Props {
    category?: string;
    brand?: string;
    model?: string;
}

const { brand, model} = Astro.props;
---

<a 
    href=`/tools/${model}`
    class="
    bg-slate-800 w-32 h-32 rounded-sm p-1 flex flex-col text-gray-600 hover:text-white relative
    after:absolute after:content-[''] after:inset-[2px] after:bg-black after:rounded-md
    "
>
    <div class="flex flex-col max-w-max">
        <p class="text-base text-gray-600 hover:text-white z-10">{brand}</p>
    </div>
    <div class="flex justify-center items-center w-full h-full">
        <h3 class="text-center text-2xl z-10">{model}</h3>
    </div>
</a>